<div class="container mt-4">
  <h2 class="mb-4 text-center text-md-start">Create a New Survey</h2>

  <% if @survey.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h5>
      <ul>
        <% @survey.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card p-4">
    <%= form_with model: @survey, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :question, "Survey Question", class: "form-label fw-bold" %>
        <%= form.text_field :question, class: "form-control", placeholder: "Enter your question..." %>
      </div>

      <div class="d-flex flex-column flex-md-row gap-3">
        <%= form.submit "Create Survey", class: "btn btn-primary px-4 py-2" %>
        <a href="<%= surveys_path %>" class="btn btn-secondary px-4 py-2">Back</a>
      </div>
    <% end %>
  </div>
</div>
